<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <%- include('../layouts/css') %>
  </head>
  <body>
    <%- include('../layouts/nav') %>
    <div class="container mt-3">
      <div class="card">
        <div
          class="card-header d-flex justify-content-between align-items-center"
        >
          <h3>Satuan</h3>
          <a href="/satuan/create" class="btn btn-primary ms-auto">Tambah</a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="myTable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th width="20%" class="text-center">Last Update</th>
                  <th width="10%" class="text-center">Action</th>
                </tr>
              </thead>
              <tbody>
                <% satuan.forEach(function(sat){ %> 
                  <tr>
                    <td><%= sat.name %></td>
                    <td align="center"><%= sat.updated_at %></td>
                    <td align="center">
                      <!-- Example single danger button -->
                        <div class="btn-group">
                          <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Opsi
                          </button>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/satuan/edit/<%=sat.id %>">Edit</a></li>
                            <li><a class="dropdown-item" href="#">Delete</a></li>  
                          </ul>
                        </div>
                    </td>
                  </tr>
                    
                  <% });%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%- include('../layouts/script') %>
    <script>
      $("#myTable").DataTable();

      function deleteConfirm(e){
        
      }
    </script>
  </body>
</html>
